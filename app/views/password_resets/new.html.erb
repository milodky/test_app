<% provide(:title, "Forgot password") %>
<h1>Forgot password</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <!--
        This allows Rails to infer that the action of the form should be to POST
        to the URL /users, in the case of password_reset we need to indicate the
        name of the resource and the corresponding URL
    -->
    <!-- the password_resets_path goes to the create method -->
    <%= form_for(:password_reset, url: password_resets_path) do |f| %>
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>